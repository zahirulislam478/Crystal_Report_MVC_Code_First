@model DUPL_Task_Project.InputModels.BookInputModel
@{
    ViewBag.Title = "Create";
}

<div class="row">
    <div class="col-12">
        <div class="col-4 offset-4">
            @if (!string.IsNullOrEmpty(ViewBag.Message))
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <strong>Success!</strong> @ViewBag.Message
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <h3 class="text-center" style="margin-top:20px; margin-bottom:15px;"><u>Add New Book</u></h3>
                <div class="from-group row mb-1">
                    @Html.LabelFor(x => x.BookName, new { @class = "col-form-label col-form-label-sm col-3" })
                    <div class="col-9">
                        @Html.TextBoxFor(x => x.BookName, new { @class = "form-control form-control-sm" })
                        @Html.ValidationMessageFor(x => x.BookName, "", new { @class = "text-danger", style = "font-size:small" })
                    </div>
                </div>
                <div class="from-group row mb-1">
                    @Html.LabelFor(x => x.Date, new { @class = "col-form-label col-form-label-sm col-3" })
                    <div class="col-9">

                        <div class="input-group input-group-sm">
                            @Html.TextBoxFor(x => x.Date, new { @class = "form-control form-control-sm" })
                            <button class="btn btn-outline-secondary" type="button" id="btn-picker"><i class="fa fa-calendar"></i></button>
                        </div>
                        @Html.ValidationMessageFor(x => x.Date, "", new { @class = "text-danger", style = "font-size:small" })
                    </div>
                </div>
                <div class="from-group row mb-1">
                    @Html.LabelFor(x => x.Quantity, new { @class = "col-form-label col-form-label-sm col-3" })
                    <div class="col-9">
                        @Html.TextBoxFor(x => x.Quantity, new { @class = "form-control form-control-sm" })
                        @Html.ValidationMessageFor(x => x.Quantity, "", new { @class = "text-danger", style = "font-size:small" })
                    </div>
                </div>
                <div class="from-group row mb-1">
                    @Html.LabelFor(x => x.AuthorIds, new { @class = "col-form-label col-form-label-sm col-3" })
                    <div class="col-9">
                        @foreach (var a in ViewBag.Authors)
                        {
                            <div class="form-check">
                                <input class="form-check-input" name="AuthorIds" type="checkbox" value="@a.AuthorId">
                                <label class="form-check-label" for="flexCheckDefault">
                                    @a.AuthorName
                                </label>
                            </div>
                        }
                    </div>
                </div>
                <div class="form-group row mb-1">
                    <div class="col-12">
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index", "Books")" class="btn btn-secondary btn-sm"><i class="fa fa-arrow-left"></i> Back to List</a>
                            <div>
                                <button type="reset" class="btn btn-secondary btn-sm"><i class="fa fa-refresh"></i> Reset</button>
                                <button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-floppy-o"></i> Save</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>
</div>
@section styles
{
    <link href="~/Content/fontawesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datepicker.standalone.min.css" rel="stylesheet" />
}
@section scripts
{
    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.min.js"></script>
    <script>
        $(() => {
            $("#Date").datepicker({
                format: 'yyyy-mm-dd'
            });
            $("#btn-picker").click(() => {
                $("#Date").datepicker('show');
            });
        });
    </script>
}
